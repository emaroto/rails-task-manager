<h1 style="color: blue">Tasks list</h1>
<% @tasks.each.with_index do |task, index| %>
 <h4><%= index+1%>.- <%=task.name %>
 <%= link_to "Details", task_path(task.id)%>
 <%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure????" } %></h4>
<% end %>
<%= link_to "Create a new task", new_task_path %>

